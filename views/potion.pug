extends layout

block content
  h1 Search Results for Potions

   // Container for Bootstrap grid
  .container-fluid
    .row
      // Loop through each item in the results array
      each potion, index in results
        .col-sm-2
          h3 #{potion.name}
          p Effect: #{potion.effect}
          p Potency: #{potion.potency}

          button(type="button", class="btn btn-outline-success", onclick=`buy(${index + 1})`) Purchase
 
  // Script to define the buy() function
  script.
    function buy(index) {
      alert(`You purchased item ${index}`);
    }

  // Style the page with Bootstrap (already included) and some custom CSS
  style.
    body {
      background-color: #f8f9fa;
    }

    h1 {
      text-align: left;
      margin-top: 20px;
    }

    section {
      margin-top: 30px;
    }

    .card {
      margin-bottom: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      font-size: 1.5em;
      font-weight: bold;
    }

    .card-text {
      font-size: 1.2em;
    }

    .btn-primary {
      background-color: #007bff;
      border-color: #007bff;
    }

    .btn-primary:hover {
      background-color: #0056b3;
      border-color: #0056b3;
    }